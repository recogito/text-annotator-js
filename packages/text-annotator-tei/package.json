{
  "name": "@recogito/text-annotator-tei",
  "version": "4.0.0-beta",
  "description": "Recogito Text Annotator TEI extension",
  "author": "Rainer Simon",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "start": "vite --host",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "test": "echo 'Skipping tests in @recogito/text-annotator package'"
  },
  "main": "./dist/text-annotator-tei.umd.js",
  "module": "./dist/text-annotator-tei.es.js",
