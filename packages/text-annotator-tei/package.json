  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/text-annotator-tei.es.js",
      "require": "./dist/text-annotator-tei.umd.js"
    },
    "./text-annotator.css": "./dist/text-annotator-tei.css"
  },
  "devDependencies": {
    "CETEIcean": "^1.9.5",
    "typescript": "5.9.3",
    "vite": "^7.2.2"
  },
  "peerDependencies": {
    "@annotorious/core": "^3.7.13",
    "@recogito/text-annotator": "4.0.0-beta"
  }
}